{% extends 'base.html.twig' %}

{% block title %}Flight{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center">
    <h1>Flight</h1>

    <table class="table w-50">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ flight.date }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ flight.time }}</td>
            </tr>
            <tr>
                <th>Origin</th>
                <td>{{ flight.origin }}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ flight.arrival }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_flight_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_flight_edit', {'id': flight.id}) }}" class="btn btn-warning">edit</a>

    {{ include('flight/_delete_form.html.twig') }}
</div>
{% endblock %}
